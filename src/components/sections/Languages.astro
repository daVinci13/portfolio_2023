---
import { spokenLanguages, type Languages } from "../../data"; // Import Languages instead of Project
import LanguageCard from "../LanguageCard.astro"; // Import LanguageCard instead of ProjectCard

export interface Props {
  languages: Languages[]; // Change the props type to Languages[]
}

const { languages } = Astro.props;
---

<section
  class="flex items-start justify-between flex-col sm:flex-row dark:text-gray-100 mt-16"
  id="languages"
>
  <h2
    class="w-[12rem] font-montserrat text-slate-900 dark:text-slate-200 underline underline-offset-4 mb-4 md:mb-0"
  >
    Languages
  </h2>
  <div class="w-full">
    <div class="grid gap-4 grid-cols-1 grid-rows-auto md:grid-cols-2">
      {spokenLanguages.map((language) => <LanguageCard language={language} />)} 
    </div>
  </div>
</section>
