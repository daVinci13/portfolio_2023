---
import type { SkillGroup } from "../../data";
import Badge from "./../ui/Badge.astro";

export interface Props {
  data: SkillGroup[];
}

const { data } = Astro.props;
---

<section
  class="flex items-start justify-between flex-col sm:flex-row dark:text-gray-100 mt-16"
  id="skills"
>
  <h2
    class="w-[12rem] font-montserrat text-slate-900 dark:text-slate-200 underline underline-offset-4 mb-4 md:mb-0"
  >
    Skills
  </h2>
  <div class="w-full grid gap-4 grid-cols-1 md:grid-cols-2 md:grid-rows-auto flex-col ">
    {
      data.map((skillGroup) => (
        <div class="relative"> <!-- Use 'relative' positioning -->
          <h3 class="text-md font-semibold font-montserrat">
            {skillGroup.category}
          </h3>
          <div class="flex flex-row gap-2 flex-wrap mt-2">
            {skillGroup.skills.map((v) => (
              <Badge content={v.name} />
            ))}
          </div>
        </div>
      ))
    }
  </div>

</section>
